    <h1>Welcome to Socket.IO Chat</h1>
    {{{body}}}
    <hr>
    <footer>Thanks for being here!</footer>
    {{#if loggedIn}}
    <script type="module" src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>
